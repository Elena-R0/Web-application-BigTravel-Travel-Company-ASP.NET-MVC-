@model IEnumerable<BigTravel_Company.Models.Orders>
@Styles.Render("~/Content/Tables.css")
@{
    ViewBag.Title = "Index";
}
<div class="search_turs">
    <h2 class="our-services__tle our-services__title--line">
       Заказ
    </h2>
</div>
<div class="container_table">
    <table class="table_reis order">
        <tr>
            <th class="order_thead">
                Дата регистрации
            </th>
            <th class="order_thead">
                Количество человек
            </th>
            <th class="order_thead">
                Фамилия клиента
            </th>
            <th class="order_thead">
                Фамилия сотрудника
            </th>
            <th class="order_thead">
                Статус заказа
            </th>
            <th class="order_thead">
                Название путевки
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Date_registration)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Number)  
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Customer.sername) 
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Employes.sername)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Order_status.NameStatus)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Vouchers.name_vouchers)
        </td>
        <td class="reis_ssilka">@Html.ActionLink("Редактировать", "Edit", new { id = item.id_orders })</td>
        <td class="reis_ssilka">@Html.ActionLink("Подробная информация", "Details", new { id = item.id_orders })</td>
        <td class="reis_ssilka">@Html.ActionLink("Удалить", "Delete", new { id = item.id_orders })</td>
    </tr>
        }
    </table>
</div>
<div class="Create_reis Print_inf">
    <a class="add_reis button_add" href="/Orders/Create"><span>&#8594;</span>Добавить заказ<span>&#8592;</span></a>
    @Html.ActionLink("Печать", "Print", null, htmlAttributes: new { @class="add_reis button_add", target = "_blank" })
</div>
