@model BigTravel_Company.Models.Payment
@Styles.Render("~/Content/edit_inf.css")
@Styles.Render("~/Content/datepicker.css")
@{
    ViewBag.Title = "Create";
}

@Scripts.Render("~/Scripts/validated.js")

<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>
@section Scripts {
    <script type="text/javascript" src="~/Scripts/datepicker.js"></script>
}
<script type="text/javascript">
    $('#date_payment').datepicker({
        maxDate: new Date()
    });
    $("#date_payment").datepicker().data('datepicker').selectDate(new Date());
</script>
<div class="container">
    @using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Payment" }))
    {
        @Html.AntiForgeryToken()
        <form class="contact_form" action="#" method="post" name="contact_form">
            <h2 class="reis_name_inf">Оплата</h2>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <ul class="contact_form-list">

                <li>
                    @Html.LabelFor(model => model.Customer.sername, "Фамилия", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.EditorFor(model => model.Customer.sername, new { htmlAttributes = new { @class = "Punkt_otp" } })
                        @Html.ValidationMessageFor(model => model.Customer.sername, "", new { @class = "text_num_reis" })
                    </div>
                </li>
                <li>
                    @Html.LabelFor(model => model.Customer.name, "Имя", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.EditorFor(model => model.Customer.name, new { htmlAttributes = new { @class = "Punkt_otp" } })

                        @Html.ValidationMessageFor(model => model.Customer.name, "", new { @class = "text_num_reis" })
                    </div>
                </li>
                <li>

                    @Html.LabelFor(model => model.Customer.patronymic, "Отчество", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.EditorFor(model => model.Customer.patronymic, new { htmlAttributes = new { @class = "Punkt_otp" } })
                        @Html.ValidationMessageFor(model => model.Customer.patronymic, "", new { @class = "text_num_reis" })
                    </div>
                </li>
                <li>
                    @Html.LabelFor(model => model.id_orders, "Номер заказа", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.DropDownList("id_orders", null, htmlAttributes: new { @class = "Punkt_otp" })
                        @Html.ValidationMessageFor(model => model.id_orders, "", new { @class = "num_reis" })
                    </div>
                </li>
                <li>
                    @Html.LabelFor(model => model.bank_card_num, "Номер банковской карты", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.EditorFor(model => model.bank_card_num, new { htmlAttributes = new { @class = "Punkt_otp" } })
                        <span class="form_hint"> @Html.ValidationMessageFor(model => model.bank_card_num, "", new { @class = "place_destion" })</span>
                    </div>
                </li>
                <li>
                    @Html.LabelFor(model => model.date_payment, "Дата оплаты", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.EditorFor(model => model.date_payment, new { htmlAttributes = new { @class = "Punkt_otp datepicker-here", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.date_payment, "", new { @class = "dt_otb" })
                    </div>
                </li>
                <li>

                    @Html.LabelFor(model => model.PayType.Name_PayType, "Тип оплаты ", htmlAttributes: new { @class = "num_reis" })
                    <div class="cont_inf">
                        @Html.DropDownList("Id_PayType", null, htmlAttributes: new { @class = "Punkt_otp" })
                        @Html.ValidationMessageFor(model => model.Id_PayType, "", new { @class = "date_Departure" })
                    </div>
                </li>

                <li class="button_inf">
                    <div class="but_reis_content">
                        <input type="submit" value="Создать" class="save_edit_reis" />
                        <div class="Save_reis">
                            <a class="back_reis button_back" href="/Payments/Index"><span>&#8594;</span>Назад<span>&#8592;</span></a>
                        </div>
                    </div>
                </li>
            </ul>
        </form>
    }

</div>