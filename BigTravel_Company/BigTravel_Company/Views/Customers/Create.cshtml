@model BigTravel_Company.Models.Customer
@Styles.Render("~/Content/edit_inf.css")
@Styles.Render("~/Content/datepicker.css")

@{
    ViewBag.Title = "Create";
}


@section Scripts {
    <script type="text/javascript" src="~/Scripts/datepicker.js"></script>
    @Scripts.Render("~/Scripts/validated.js")

    <script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>

    <script type="text/javascript">
        $('#date_of_birth').datepicker({
            maxDate: new Date()
        });
        $("#date_of_birth").datepicker().data('datepicker').selectDate(new Date());

    </script>
}

