@model IEnumerable<BigTravel_Company.Models.Customer>
@Styles.Render("~/Content/Tables.css")
@{
    ViewBag.Title = "Index";
}
<div class="search_turs">
    <h2 class="our-services__tle our-services__title--liner_hot">
        Информация по клиентам
    </h2>
</div>
<div class="container_table">
    <table class="table_reis order cust">
        <tr class="order_thead_cust">
            <th class="order_thead_cust">
                ФИО
            </th>
            <th class="order_thead_cust">
                Серия/Номер паспорта
            </th>
            <th class="order_thead_cust">
                Дата рождения
            </th>
            <th class="order_thead_cust">
                Адрес
            </th>
            <th class="order_thead_cust">
                Email
            </th>
            <th class="order_thead_cust">
                Телефон
            </th>
            <th class="order_thead_cust">
               Пароль
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.sername) @Html.DisplayFor(modelItem => item.name) @Html.DisplayFor(modelItem => item.patronymic)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Series) @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.date_of_birth)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.adress)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.phone)
        </td>
        <td class="ifn_orders__content">
            @Html.DisplayFor(modelItem => item.Password)
        </td>
        <td class="reis_ssilka">@Html.ActionLink("Редактировать", "Edit", new { id = item.id_customer })</td>
        <td class="reis_ssilka">@Html.ActionLink("Подробная информация", "Details", new { id = item.id_customer })</td>
        <td class="reis_ssilka">@Html.ActionLink("Удалить", "Delete", new { id = item.id_customer })</td>
    </tr>
        }
    </table>
</div>
<div class="Create_reis">
    <a class="add_reis button_add" href="/Customers/Create"><span>&#8594;</span>Добавить клиента<span>&#8592;</span></a>
</div>