@model BigTravel_Company.Models.Employes

@Styles.Render("~/Content/edit_inf.css")
@{
    ViewBag.Title = "Delete";
}
<div class="search_turs">
    <h2 class="our-services__tle our-services__title--liner_hot">
        Удаление данных о сотруднике
    </h2>
</div>

<div class="container">
    <div class="offers">
        <div class="offer">
            <div class="offer__header">
                <h2 class="offer__title">
                    @Html.DisplayFor(model => model.sername) @Html.DisplayFor(model => model.name) @Html.DisplayFor(model => model.patronymic)
                </h2>
            </div>
            <div class="offer__body">
                <div class="offer__body-content">
                    <b>Дата рождения:</b>  @Html.DisplayFor(model => model.date_of_birth)<br />
                    <b>Зарплата:</b> @Html.DisplayFor(model => model.salary)<br />
                    <b>Email:</b> @Html.DisplayFor(model => model.Email)<br />
                    <b>Телефон:</b> @Html.DisplayFor(model => model.phone)<br />
                    <b>Пароль:</b> @Html.DisplayFor(model => model.Password)<br />
                </div>
            </div>
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="but_reis_content_butt">
                    <input type="submit" value="Удалить" class="save_edit_reis" />
                    <div class="Save_reis">
                        <a class="back_reis button_back" href="/Employes/Index"><span>&#8594;</span>Назад<span>&#8592;</span></a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>