@model IEnumerable<BigTravel_Company.Models.reis>
@Styles.Render("~/Content/Tables.css")
@{
    ViewBag.Title = "Index";
}
<div class="search_turs">
    <h2 class="our-services__tle our-services__title--line">
        Рейсы
    </h2>
</div>
<div class="container_table">
    <table class="table_reis">
        <tr>
            <th>
                Пункт отправления
            </th>
            <th>
                Место назначения
            </th>
            <th>
                Дата отъезда
            </th>
            <th>
                Дата прибытия
            </th>
            <th colspan="3"></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Point_departure)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Destination)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Departure_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date_arrival)
                </td>
                <td class="reis_ssilka">@Html.ActionLink("Редактировать", "Edit", new { id = item.id_reis })</td>
                <td class="reis_ssilka">@Html.ActionLink("Подробная информация", "Details", new { id = item.id_reis })</td>
                <td class="reis_ssilka">@Html.ActionLink("Удалить", "Delete", new { id = item.id_reis })</td>
            </tr>
        }
    </table>
</div>
<div class="Create_reis">
   <a class="add_reis button_add" href="/reis/Create"><span>&#8594;</span>Добавить рейс<span>&#8592;</span></a>
</div>

